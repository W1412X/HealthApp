<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/start_ad_view"
            android:background="#00222222"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/start_ad_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/self_page_team_exmine_icon"
                android:scaleType="centerCrop"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/start_page_skip_ad_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/start_page_skip_ad_button"
                android:text="跳过"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/start_page_scan_ad_button"
                android:background="@drawable/start_page_scan_ad_button"
                android:text="点击跳转详情页"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:background="@drawable/start_login_page_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/start_login_view">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="350">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="300">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/start_login_page_title">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="25px"
                    android:layout_marginRight="25px"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="100">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ccffffff"
                        android:layout_weight="100">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/start_login_page_choose_passwd_button"
                                android:background="#00000000"
                                android:text="密码登陆"
                                android:textColor="#8a8a8a"
                                android:textStyle="bold"
                                android:textSize="21sp"
                                android:padding="10dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </androidx.appcompat.widget.AppCompatButton>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/start_login_page_choose_exmine_button"
                                android:background="#00000000"
                                android:text="验证码登陆"
                                android:textColor="#8a8a8a"
                                android:textStyle="bold"
                                android:textSize="21sp"
                                android:padding="10dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </androidx.appcompat.widget.AppCompatButton>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingLeft="2px"
                            android:paddingRight="2px"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8px">
                            <LinearLayout
                                android:id="@+id/start_page_passwd_bar"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:background="#cc8a8a8a"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/start_page_exmine_bar"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:background="#cc8a8a8a"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/start_login_page_login_by_passwd_view"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/start_login_page_passwd_number_input"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="45dp"
                                android:hint="手机号"
                                android:textSize="20sp"
                                android:padding="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eeffffff">
                            </EditText>
                            <LinearLayout
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/start_login_page_passwd_passwd_input"
                                    android:hint="密码"
                                    android:textSize="20sp"
                                    android:padding="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#eeffffff">
                                </EditText>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="right"
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:text="忘记密码？"
                                    android:textColor="#8a8a8a"
                                    android:layout_marginRight="40dp"
                                    android:textSize="16sp">
                                </androidx.appcompat.widget.AppCompatButton>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/start_login_page_passwd_login_button"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:text="登陆"
                                    android:textSize="20sp"
                                    android:background="@drawable/start_page_login_button"
                                    android:textColor="#ffffff"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </androidx.appcompat.widget.AppCompatButton>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/start_login_page_passwd_to_register_page_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:padding="0px"
                                    android:text="         没有帐号？立即注册>>"
                                    android:textStyle="bold"
                                    android:textColor="#ee3654d5"
                                    android:layout_marginRight="40dp"
                                    android:textSize="16sp">
                                </androidx.appcompat.widget.AppCompatButton>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/start_login_page_login_by_exmine_code_view"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/start_login_page_login_exmine_number_input"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="45dp"
                                android:hint="手机号"
                                android:textSize="20sp"
                                android:padding="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eeffffff">
                            </EditText>
                            <LinearLayout
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/start_login_page_login_exmine_exmine_input"
                                    android:hint="验证码"
                                    android:textSize="20sp"
                                    android:padding="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="70"
                                    android:background="#eeffffff">
                                </EditText>
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/start_login_page_login_exmine_get_exmine_button"
                                    android:layout_width="match_parent"
                                    android:text="获取验证码"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/start_page_login_get_exmine_code_button"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18sp"
                                    android:layout_weight="100"
                                    android:layout_height="wrap_content">
                                </androidx.appcompat.widget.AppCompatButton>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="right"
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:text="忘记密码？"
                                    android:textColor="#8a8a8a"
                                    android:layout_marginRight="40dp"
                                    android:textSize="16sp">
                                </androidx.appcompat.widget.AppCompatButton>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/start_login_page_exmine_login_button"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:text="登陆"
                                    android:textSize="20sp"
                                    android:background="@drawable/start_page_login_button"
                                    android:textColor="#ffffff"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </androidx.appcompat.widget.AppCompatButton>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/start_login_page_exmine_to_register_page_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:padding="0px"
                                    android:text="         没有帐号？立即注册>>"
                                    android:textStyle="bold"
                                    android:textColor="#ee3654d5"
                                    android:layout_marginRight="40dp"
                                    android:textSize="16sp">
                                </androidx.appcompat.widget.AppCompatButton>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="500"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/start_register_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="#3654d5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_login_page_return_login_page_button"
                            android:layout_width="30dp"
                            android:text="〈"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:background="#00000000"
                            android:layout_height="wrap_content">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="注册"
                            android:textColor="#ffffff"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="75px"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/register_page_phone_icon"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+86"
                            android:textSize="18sp"/>
                        <LinearLayout
                            android:layout_width="50px"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/start_register_page_number_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="输入手机号"
                            android:background="#00000000"
                            android:padding="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="5px"
                        android:background="#8a8a8a"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/start_register_page_exmine_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="输入验证码"
                            android:layout_weight="75"
                            android:background="#00000000"
                            android:padding="10dp"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_register_page_get_exmine_button"
                            android:layout_width="match_parent"
                            android:text="获取验证码"
                            android:textColor="#ffffff"
                            android:background="@drawable/start_page_login_get_exmine_code_button"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_weight="100"
                            android:padding="0dp"
                            android:layout_height="35dp">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="5px"
                        android:background="#8a8a8a"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="75px"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/register_page_lock_icon"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="50px"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/start_register_page_passwd_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="设置登陆密码"
                            android:background="#00000000"
                            android:padding="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="5px"
                        android:background="#8a8a8a"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="75px"
                            android:layout_height="match_parent">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="50px"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/start_register_page_passwd2_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="再次输入登陆密码"
                            android:background="#00000000"
                            android:padding="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="5px"
                        android:background="#8a8a8a"/>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/start_register_page_agree_button"
                            android:layout_width="25dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="25dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我已阅读并同意《用户注册协议》"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_register_page_register_button"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="注册"
                            android:background="@drawable/start_page_login_button"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:layout_marginTop="30dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/start_page_loading_view"
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>