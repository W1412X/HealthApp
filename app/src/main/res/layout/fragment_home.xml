<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_page_activity_pages.MainHomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="#00000000"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_gravity="center_vertical"
                                android:layout_width="65dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="4dp"
                                android:orientation="horizontal">
                                <ImageButton
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/transparent_background"
                                    android:src="@drawable/home_position_icon"
                                    android:scaleType="centerInside"
                                    android:padding="1dp"/>
                                <Button
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="1dp"
                                    android:background="@drawable/transparent_background"
                                    android:text="青岛"
                                    android:textColor="#ffffff"
                                    android:padding="0dp"/>
                            </LinearLayout>
                            <ImageButton
                                android:layout_marginLeft="2dp"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/transparent_background"
                                android:src="@drawable/home_top_date_icon"
                                android:scaleType="centerInside"
                                android:padding="1dp"/>
                            <ImageButton
                                android:layout_marginLeft="6dp"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/transparent_background"
                                android:src="@drawable/home_top_qr_scan"
                                android:scaleType="centerInside"
                                android:padding="4dp"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/home_edittext_background"
                                android:hint="    输入商品名称" />
                            <ImageButton
                                android:layout_width="55dp"
                                android:layout_centerVertical="true"
                                android:layout_height="30dp"
                                android:src="@drawable/home_top_search_icon"
                                android:background="@drawable/transparent_background"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="5dp"
                                android:scaleType="centerInside"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            app:cardUseCompatPadding="true"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="125dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_margin="2dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp">
                                        <ImageButton
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/transparent_background"
                                            android:src="@drawable/exmaine_list_icon"
                                            android:scaleType="centerInside"
                                            android:padding="5dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="3"
                                        android:layout_marginBottom="2dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp">
                                        <Button
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="体检清单"
                                            android:textColor="#8a8a8a"
                                            android:textStyle="bold"
                                            android:padding="0dp"
                                            android:background="@drawable/transparent_background" />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp">
                                        <ImageButton
                                            android:id="@+id/home_page_risk_result_button"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/transparent_background"
                                            android:src="@drawable/risk_table"
                                            android:scaleType="centerInside"
                                            android:padding="7dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="3"
                                        android:layout_marginBottom="2dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp">
                                        <Button
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="风险图谱"
                                            android:textColor="#8a8a8a"
                                            android:textStyle="bold"
                                            android:padding="0dp"
                                            android:background="@drawable/transparent_background" />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp">
                                        <ImageButton
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/transparent_background"
                                            android:src="@drawable/activity_center_icon"
                                            android:scaleType="centerInside"
                                            android:padding="5dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="3"
                                        android:layout_marginBottom="2dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp">
                                        <Button
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="活动中心"
                                            android:textColor="#8a8a8a"
                                            android:textStyle="bold"
                                            android:padding="0dp"
                                            android:background="@drawable/transparent_background" />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp">
                                        <ImageButton
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/transparent_background"
                                            android:src="@drawable/near_hospitals"
                                            android:scaleType="centerInside"
                                            android:padding="7dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="3"
                                        android:layout_marginBottom="2dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp">
                                        <Button
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="附近医院"
                                            android:textColor="#8a8a8a"
                                            android:textStyle="bold"
                                            android:padding="0dp"
                                            android:background="@drawable/transparent_background" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <androidx.cardview.widget.CardView
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="2dp"
                                        app:cardCornerRadius="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageButton
                                                android:id="@+id/home_page_examine_to_know_button"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/main_page_examine_to_know_background"
                                                android:scaleType="centerCrop"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="55dp"
                                                android:layout_marginStart="5dp"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginBottom="5dp"
                                                android:background="@drawable/transparent_background"
                                                android:text="体检须知"
                                                android:textColor="#5a5a5a"
                                                android:textSize="18dp"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <androidx.cardview.widget.CardView
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="2dp"
                                        app:cardCornerRadius="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageButton
                                                android:id="@+id/home_page_examine_result_button"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/transparent_background"
                                                android:src="@drawable/health_keeping_tips_icon"
                                                android:scaleType="centerCrop"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="55dp"
                                                android:layout_marginStart="5dp"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginBottom="5dp"
                                                android:background="@drawable/transparent_background"
                                                android:text="健康档案"
                                                android:textColor="#5a5a5a"
                                                android:textSize="18dp"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <androidx.cardview.widget.CardView
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="2dp"
                                        app:cardCornerRadius="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageButton
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/transparent_background"
                                                android:src="@drawable/slow_disease_manage_icon"
                                                android:scaleType="centerCrop"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="55dp"
                                                android:layout_marginStart="5dp"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginBottom="5dp"
                                                android:background="@drawable/transparent_background"
                                                android:text="健康管理"
                                                android:textColor="#5a5a5a"
                                                android:textSize="18dp"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <androidx.cardview.widget.CardView
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="2dp"
                                        app:cardCornerRadius="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageButton
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/transparent_background"
                                                android:src="@drawable/my_health_manager_icon"
                                                android:scaleType="centerCrop"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="55dp"
                                                android:layout_marginStart="5dp"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginBottom="5dp"
                                                android:background="@drawable/transparent_background"
                                                android:text="VIP充值入口"
                                                android:textColor="#5a5a5a"
                                                android:textSize="18dp"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="健康咨询"
                                    android:textStyle="bold"
                                    android:layout_margin="5dp"
                                    android:textSize="20sp"/>
                                <androidx.cardview.widget.CardView
                                    app:cardUseCompatPadding="true"
                                    app:cardElevation="2dp"
                                    app:cardCornerRadius="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:src="@drawable/slow_disease_manage_icon"/>
                                </androidx.cardview.widget.CardView>
                                <ScrollView
                                    android:layout_margin="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:src="@drawable/slow_disease_manage_icon"/>
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:src="@drawable/slow_disease_manage_icon"/>
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:src="@drawable/slow_disease_manage_icon"/>
                                    </LinearLayout>
                                </ScrollView>
                                <androidx.cardview.widget.CardView
                                    android:layout_margin="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <ImageButton
                                            android:layout_width="match_parent"
                                            android:background="@drawable/home_page_women_part"
                                            android:layout_height="match_parent">
                                        </ImageButton>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textColor="#e36dc3"
                                            android:textSize="25dp"
                                            android:textStyle="bold"
                                            android:layout_margin="10dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_margin="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <ImageButton
                                            android:layout_width="match_parent"
                                            android:background="@drawable/home_page_men_part"
                                            android:layout_height="match_parent">
                                        </ImageButton>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textColor="#165f9f"
                                            android:textSize="25dp"
                                            android:textStyle="bold"
                                            android:layout_margin="10dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>




                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#aa000000"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="55dp">
                                <Button
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/transparent_background"
                                    android:gravity="center"
                                    android:text="优惠服务"
                                    android:textStyle="bold"
                                    android:textColor="#4a4a4a"
                                    android:textSize="18dp"/>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#aa000000"/>
                                <Button
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/transparent_background"
                                    android:gravity="center"
                                    android:text="健康精选"
                                    android:textStyle="bold"
                                    android:textColor="#4a4a4a"
                                    android:textSize="18dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>